{
  "compilerOptions": {
    "target": "ES5",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
 
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src", "test/usecases/mocks", "test/usecases/authentication.spec.ts", "test/usecases/save-tools.spec.ts", "test/pages/tool.spec.tsx", "test/pages/login.spec.tsx", "test/pages/home.spec.tsx"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
